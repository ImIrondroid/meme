<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <item name="md_color_button_text">@color/black</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="fabTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Text" parent="">
        <item name="android:includeFontPadding">false</item>
        <item name="android:minLines">1</item>
    </style>

    <style name="NotoRegularText" parent="Text">
        <item name="android:fontFamily">@font/noto_regular</item>
        <item name="fontFamily">@font/noto_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="NotoBoldText" parent="Text">
        <item name="android:fontFamily">@font/noto_bold</item>
        <item name="fontFamily">@font/noto_bold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="NotoMediumText" parent="Text">
        <item name="android:fontFamily">@font/noto_medium</item>
        <item name="fontFamily">@font/noto_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>